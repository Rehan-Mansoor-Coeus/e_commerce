{% extends '/layout/base.html.twig' %}

{% block title %}Create Tweet!{% endblock %}

{% block body %}
     {% for message in app.flashes('success') %}
          <div class="alert alert-success">
               {{ message }}
          </div>
     {% endfor %}
     <div class="card">
          <div class="card-header">
               <header> Create new Author </header>
               <a class="btn btn-primary float-right" href="/users">Records</a>
          </div>
          <div class="card-body">
               {{ form(form) }}

               {{ form_start(form) }}
                {{ form_end(form) }}
          </div>
     </div>

{% endblock %}