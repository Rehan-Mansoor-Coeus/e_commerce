{% extends('/base.html.twig') %}
{% block title %} Cart {% endblock %}

{% block body %}


    <div class="row mt-5">
        <div class="col-md-12">
            <table class="table table-striped table-bordered">
                <thead class="bg-primary">
                <tr>
                    <th>Sr.</th>
                    <th>Product</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% set total = 0 %}
                {% for data in app.session.get('cart') %}
                <tr>
                    <td>{{ 1 }}</td>
                    <td><img width="100px" src="/uploads/{{ data.image }}">{{ data.name }}</td>
                    <td>{{ data.quantity }}</td>
                    <td>{{ data.price }}</td>
                    <td></td>
                </tr>
                    {% set total = total + (data.price * data.quantity) %}
                {% endfor %}
                </tbody>
                <tfoot>
                <tr>
                    <td colspan="4" class="text-right"><h3>Total</h3></td>
                    <td><h3 class="text-info">{{ total }} Rs </h3> </td>
                </tr>
                </tfoot>
            </table>
        </div>
        <div class="col-lg-12 col-sm-12 col-12 text-center ">
            <a href="/checkout" class="btn btn-success">Checkout</a>
        </div>
    </div>


{% endblock %}

