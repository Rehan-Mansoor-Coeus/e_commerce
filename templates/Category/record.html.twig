{% extends '/layout/base.html.twig' %}

{% block title %}Product Record!{% endblock %}

{% block body %}
     {% for message in app.flashes('success') %}
          <div class="alert alert-danger">
               {{ message }}
          </div>
     {% endfor %}
     <div class="card">
          <div class="card-header">
               <header>{{ header   }}</header>
               <a class="btn btn-warning float-right" href="/category">Create</a>
          </div>
          <div class="card-body">
               <table class="table table-bordered table-striped">
                    <thead>
                    <tr class="bg-danger">
                         <th>ID</th>
                         <th>Name</th>
                         <th>Date</th>
                         <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in category %}
                         <tr>
                              <td>{{ data.id }}</td>
                              <td>{{ data.name }}</td>
                              <td>{{ data.created }}</td>
                              <td>
                                   <a href="/category/edit/{{ data.id }}" class="btn btn-primary">Edit</a>
                                   <a href="{{ path('delete-Category', {'id' : data.id})}}" class="btn btn-danger">Del</a>
                              </td>
                         </tr
                    {% endfor %}
                    </tbody>
               </table>
          </div>

     </div>

{% endblock %}
