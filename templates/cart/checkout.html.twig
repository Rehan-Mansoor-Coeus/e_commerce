{% extends('/base.html.twig') %}
{% block title %} Checkout {% endblock %}

{% block body %}


    <div class="row mt-5">
        <div class="col-md-12">
            <form action="/order" method="post" class="form-horizontal">
                <div class="row ml-1">
                    <div class="col-billing col-md-7" style="padding:5% 6% 4em 0;">
                        <div class="login-form" style="float:right;max-width: 572px;">
                            <!--login form-->
                            <div class="row">
                                <input type="hidden" name="_token" value="RHR4q1KWrQWFwgZIq9wMrkF2yiX4rRrLt6Mbqln9">
                                <div class="col-12 row mb-4">
                                    <div class="col-md-6 h2"> Billing Details </div>
{#                                    <div class="col-md-6 text-right">#}
{#                                        <span aria-hidden="true">Already have an account?</span>#}
{#                                        <a style="color:black" href="/login">Log in</a>#}
{#                                    </div>#}
                                </div>
                                <div class="col-md-4">
                                    <label>Name <i class="text-danger">*</i> </label>
                                    <div class="form-group ">
                                        <input readonly type="text" class="form-control aoa" name="name" id="name" value="{{ app.user.username }}" placeholder=" Name" required="">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>Email <i class="text-danger">*</i> </label>
                                    <div class="form-group ">
                                        <input type="email" class="form-control" value="{{ app.user.email }}" name="email" id="billing_email" placeholder=" email" required="">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <label>Mobile Number <i class="text-danger">*</i> </label>
                                    <div class="form-group ">
                                        <input min="8" pattern="\d+" type="phone" class="form-control" name="mobile" value="{{ app.user.phone }}" id="billing_mobile" placeholder=" Mobile Number" required="">
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <label>Address <i class="text-danger">*</i> </label>
                                    <div class="form-group ">
                                        <textarea type="text" class="form-control" rows="5" style="    font-size: 16px;" name="address" id="billing_address" required="">{{ app.user.address }}</textarea>
                                        <span class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-12"></div>
                            </div>
                            <button type="submit" class="btn btn-black btn-lg" style="">Order Now</button>
                            <a class="ml-4 step__footer__previous-link" href="/cart">
                                <span class="step__footer__previous-link-content">Return to cart</span>
                            </a>
                        </div>
                    </div>
                    {% set total = 0 %}
                    {% set qty = 0 %}
                    {% for data in app.session.get('cart') %}
                        {% set total = total + (data.price * data.quantity) %}
                        {% set qty = qty + data.quantity %}
                    {% endfor %}

                    <div class="col-order col-md-5" style="background-color:#fafafa;padding:3% 0 4em 4%">
                        <div style="max-width:418px">
                            <div class="mb-4 pl-md-3">
                                <div class="h2">Your Order</div>
                            </div>
                            <table class="table table-borderless">
                                <tbody>
                                <tr style="border-top:1px solid #e5e5e5">
                                    <td class="pt-5">Total Products Order</td>
                                    <td class="pt-5">{{ qty }}</td>
                                </tr>
                                <tr>
                                    <td>Sub Total</td>
                                    <td>{{ total }}</td>
                                </tr>
                                <tr>
                                    <td class="pb-5">Shipping Charges</td>
                                    <td class="pb-5"><small>Free Shipping</small></td>
                                </tr>
                                <tr style="border-top:1px solid #e5e5e5">
                                    <td class="pt-5">Total</td>
                                    <td class="pt-5">Rs {{ total }}</td>
                                    <input type="hidden" name="grand_total" value="{{ total }}">
                                </tr>
                                <tr>
                                    <td colspan="2">
                                        <label>
                                            <input id="cod" type="radio" name="payment_method" value="COD" checked="">
                                            <i class="fa fa-money px-3"></i> Cash On Delivery
                                        </label>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>


{% endblock %}

