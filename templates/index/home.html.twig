{% extends('/base.html.twig') %}

{% block body %}


    <div class="row">
        <div class="col-md-9">
            <div class="mt-lg-5">
                {#Products#}
{#                <div class="spinner-border" role="status">#}
{#                    <span class="sr-only">Loading...</span>#}
{#                </div>#}
                <div class="row">
                {% for data in result %}
                     <div class="col-md-4">
                            <div class="card">
                                <img class="card-img-top" src="/uploads/{{ data.image }}" alt="Card image">
                                <div class="card-body">
                                    <h4 class="card-title">{{ data.name }} <small class="text-muted">{{ data.created|ago }}</small> </h4>
                                    <br>
                                    <h3 class="text-warning text-bold">{{ data.price }} <sub class="text-success"> RS</sub></h3>
                                    <p class="card-text">{{ data.description }}</p>
{#                                    <button onclick="addtocart(/add-to-cart/{{ data.id }} , {{ data.id }})" class="btn btn-primary">Add To Card</button>#}
                                    {% if data.stock > 0 %}
{#                                        <a href="/add-to-cart/{{ data.id }}" class="btn btn-primary ">Add To Card</a>#}
                                        <a  href="#" data-toggle="tooltip" onclick="addtocart('/add-to-cart/{{ data.id }}')" class="btn btn-primary ">Add To Card</a>
                                    {% else %}
                                        <button class="btn btn-default disabled">Out Of Stock</button>
                                    {% endif %}
{#                                    <a href="/add-to-cart/{{ data.id }}" class="btn btn-primary">View</a>#}
                                        <small class="float-right">
                                        {% if is_granted('EDIT' , data) %}
                                            <a href="/product/edit/{{ data.id }}" class="text-primary"><i class=" fas fa-pencil-alt"></i></a>
                                        {% endif %}
                                        {% if is_granted('DELETE' , data) %}
                                            <a href="/product/delete/{{ data.id }}" class="text-danger"><i class="fas fa-trash-alt"></i></a>
                                        {% endif %}
                                    </small>
                                </div>
                            </div>
                        </div>

                {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-md-3 sidebar-item">
            <div class="nav flex-column nav-pills make-me-sticky" id="myTab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" href="{{ path('home') }}">Home</a>

                {% for data in category %}
                <a class="nav-link"  href="/products/{{ data.id }}">{{ data.name | slice(0,20)}}</a>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}

 {% block javascripts %}
     <script src="{{ asset('frontend/js/cart.js') }}"></script>
 {% endblock %}

