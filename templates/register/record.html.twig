{% extends '/layout/base.html.twig' %}

{% block title %}User Record!{% endblock %}

{% block body %}
     {% for message in app.flashes('success') %}
          <div class="alert alert-success">
               {{ message }}
          </div>
     {% endfor %}
     {% for message in app.flashes('error') %}
     <div class="alert alert-danger">
          {{ message }}
     </div>
     {% endfor %}
     <div class="card">
          <div class="card-header">
               <header>User Records</header>
               <a class="btn btn-warning float-right" href="{{ path('user-create') }}">Create</a>

          </div>
          <div class="card-body">
               <table class="table table-bordered table-striped">
                    <thead>
                    <tr class="bg-danger">
                         <th>ID</th>
                         <th>User</th>
                         <th>Eamil</th>
                         <th>Phone</th>
                         <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for data in user %}
                         <tr>
                              <td>{{ data.id }}</td>
                              <td>{{ data.username }}</td>
                              <td>{{ data.email }}</td>
                              <td>{{ data.phone }}</td>

                              <td>
                                   <a href="{{ path('edit-user' , {id:data.id}) }}" class="btn btn-primary">Edit</a>
                                   <a href="{{ path('delete-user' , {id:data.id}) }}" class="btn btn-danger">Del</a>
                              </td>
                         </tr>
                    {% endfor %}
                    </tbody>
               </table>
          </div>

     </div>

{% endblock %}
